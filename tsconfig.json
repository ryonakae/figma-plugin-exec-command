{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "*": ["@types/*"]
    },
    "types": ["@types/node", "@figma/plugin-typings"]
  },
  "include": [
    "src",
    ".eslintrc.js",
    ".prettierrc.js",
    "vite.config.ts",
    "@types"
  ],
  "exclude": ["node_modules", "dist"]
}
